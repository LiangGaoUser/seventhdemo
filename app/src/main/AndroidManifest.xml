<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gf.seventhdemo">

    <!-- 允许读取联系人信息 -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- 允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 获取GSM（2g）、WCDMA（联通3g）等网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".homepage.LoginActivity" />
        <activity android:name=".guidepage.GuideActivity" />
        <activity android:name=".guidepage.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".memo.MemoActivity" />
        <activity android:name=".memo.MemoAddActivity" />
        <activity android:name=".memo.MemoEditActivity" />
        <activity android:name=".phonebook.PhoneBookActivity" />
        <activity android:name=".phonebook.PhoneBookAddActivity" />
        <activity android:name=".phonebook.PhoneBookEditActivity" />
        <activity android:name=".CalculatorActivity" />
        <activity android:name=".map.MapActivity" />
        <activity android:name=".weather.WeatherActivity" />
        <activity android:name=".settings.AboutActivity" />
        <activity android:name=".homepage.RegisterActivity" />
        <activity android:name=".homepage.HomePageActivity" />
        <activity android:name=".settings.SettingsActivity" />
        <activity android:name=".settings.LoginPsdUpdateActivity"></activity>
    </application>


</manifest>